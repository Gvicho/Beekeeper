<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Beekeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Beekeeper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/bg_pink</item>
    </style>

    <style name="background">
        <item name="android:background">@color/bg_pink</item>
    </style>


    <style name="background_drawer">
        <item name="android:background">@color/bg_pink</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="editText">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="topContainer">
        <item name="android:background">@drawable/bg_top_container</item>
    </style>

    <style name="bottomContainer">
        <item name="android:background">@drawable/bg_bottom_container</item>
    </style>

    <style name="bottomSheetBackground">
        <item name="android:background">@drawable/bg_rec</item>
    </style>

    <style name="report_item_background">
        <item name="android:background">@drawable/bg_rec</item>
    </style>

    <style name="text_rey">
        <item name="android:textColor">@color/background_color_level1</item>
    </style>

    <style name="centerContainer">
        <item name="android:background">@drawable/bg_center_container</item>
    </style>






</resources>