<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Beekeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#3F51B5</item>
    </style>


    <style name="background">
        <item name="android:background">#1B1A1A</item>
    </style>


    <style name="background_drawer">
        <item name="android:background">@color/drawer_dark</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="editText">
        <item name="android:textColorHint">@color/hint_color_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="topContainer">
        <item name="android:background">@drawable/bg_top_container_dark</item>
    </style>

    <style name="bottomContainer">
        <item name="android:background">@drawable/bg_bottom_container_dark</item>
    </style>

    <style name="bottomSheetBackground">
        <item name="android:background">@drawable/bg_rec_dark</item>
    </style>


    <style name="report_item_background">
        <item name="android:background">@drawable/bg_rec_dark_rec_item</item>
    </style>


</resources>