<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:layout_marginVertical="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/RoundedCorners" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAppearance="@style/heading"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/profileImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/beekeeperId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Beekeeper ID:"
        android:textAppearance="@style/low_heading"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <TextView
        android:id="@+id/tvBeekeeperId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAppearance="@style/low_heading"
        app:layout_constraintStart_toEndOf="@+id/beekeeperId"
        app:layout_constraintTop_toTopOf="@id/beekeeperId"
        app:layout_constraintBottom_toBottomOf="@id/beekeeperId"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/numberOfFarms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Number Of Farms:"
        android:textAppearance="@style/low_heading"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/beekeeperId" />

    <TextView
        android:id="@+id/tvNumberOfFarms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAppearance="@style/low_heading"
        app:layout_constraintStart_toEndOf="@+id/numberOfFarms"
        app:layout_constraintTop_toTopOf="@id/numberOfFarms"
        app:layout_constraintBottom_toBottomOf="@id/numberOfFarms"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Phone :"
        android:textAppearance="@style/low_heading"
        app:layout_constraintStart_toStartOf="@id/numberOfFarms"
        app:layout_constraintTop_toBottomOf="@id/numberOfFarms" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="595323221"
        android:textAppearance="@style/low_heading"
        app:layout_constraintStart_toEndOf="@+id/phone"
        app:layout_constraintTop_toTopOf="@id/phone"
        app:layout_constraintBottom_toBottomOf="@id/phone"
        android:layout_marginStart="5dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Email :"
        android:textAppearance="@style/low_heading"
        app:layout_constraintStart_toStartOf="@id/phone"
        app:layout_constraintTop_toBottomOf="@id/phone" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jora_kakaur3@mail.com"
        android:textAppearance="@style/low_heading"
        app:layout_constraintStart_toEndOf="@+id/email"
        app:layout_constraintTop_toTopOf="@id/email"
        app:layout_constraintBottom_toBottomOf="@id/email"
        android:layout_marginStart="5dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <ImageButton
        android:id="@+id/phoneBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/ic_phone_32"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/mailBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/ic_gmail_32"
        app:layout_constraintBottom_toBottomOf="@+id/phoneBtn"
        app:layout_constraintStart_toEndOf="@id/phoneBtn"
        app:layout_constraintTop_toTopOf="@id/phoneBtn"
        android:layout_marginStart="15dp"
        android:visibility="gone"/>



</androidx.constraintlayout.widget.ConstraintLayout>